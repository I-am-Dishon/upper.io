server {
  location / {
		rewrite ^/db/(.*)$ /db.v1/$1 redirect;
		rewrite ^/db$ /db.v1/ redirect;

    try_files =404 @vanity;
		log_not_found off;
  }

  location @vanity {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass http://${UPPER_VANITY_PORT_9001_TCP_ADDR}:${UPPER_VANITY_PORT_9001_TCP_PORT};
    proxy_intercept_errors on;
    recursive_error_pages on;

    set $pass 0;
    if ($arg_go-get = 1) {
      set $pass 1;
    }
    if ($request_uri ~ git-upload-pack) {
      set $pass 1;
    }
    if ($pass = 0) {
      return 404;
    }

    error_page 404 = @fallback;
		log_not_found off;
  }

  location @fallback {
    proxy_set_header X-Real-IP  $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    proxy_pass http://${UPPER_SITE_PORT_9000_TCP_ADDR}:${UPPER_SITE_PORT_9000_TCP_PORT};
  }
}
